{
    "env": {
        "node": true,
		"mocha": true,
		"es6": true
	},
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
		],
		"no-unused-vars": [
			"error",
			{ "argsIgnorePattern": "^_" }
		]
    }
}
